.card.my-4.tags
  .card-header 
    h2 Tags
  .card-body
    ul
      - var tags = [];
      each article in allArticles
        each tag in article.tags.split(',').slice(0, 10)
          - if(!tags.includes(tag))
            - tags.push(tag)
              a.tag(href="/tags/"+tag)
               li= tag

